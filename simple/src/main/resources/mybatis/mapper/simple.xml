<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jjang051.simple.mybatis.dao.SimpleDao">
    <select id="findAll"
            resultType="com.jjang051.simple.mybatis.dto.SimpleDto">
        select * from simple
    </select>
    <insert id="write">
        insert into simple(id,writer,title,content,regdate,hit,password)
        values(board_seq02.nextval,#{writer},#{title},#{content},sysdate,0,#{password})
    </insert>
    <delete id="deleteById" parameterType="int">
        delete from simple where id = #{id}
    </delete>
</mapper>